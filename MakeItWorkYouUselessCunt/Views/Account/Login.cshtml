@using ManagementSystemVersionTwo.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in"; Layout = null;
}
@Styles.Render("~/Content/style.css")
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div style="background-image:url(../../EIKONES/login_1.jpg)" class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
            <div class="row w-100">
                <div class="col-lg-4 mx-auto">
                    <div class="auto-form-wrapper">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @ViewBag.errorMessage
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <label class="label">Username</label>
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter your name" })
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                        </span>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="label">Password</label>
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                        </span>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary submit-btn btn-block">Login</button>
                            </div>
                        }
                    </div>
                    <p class="footer-text text-center">Copyright © 2021 Xenocrates. All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/off-canvas.js")
}
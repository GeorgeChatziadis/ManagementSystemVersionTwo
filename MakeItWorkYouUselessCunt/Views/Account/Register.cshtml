@model ManagementSystemVersionTwo.Models.RegisterViewModel
@{
    ViewBag.Title = "Register"; Layout = null;
}

@Styles.Render("~/Content/materialdesignicons.min.css")
@Styles.Render("~/Content/ionicons.css")
@Styles.Render("~/Content/flag-icon.min.css")
@Styles.Render("~/Content/vendor.bundle.base.css")
@Styles.Render("~/Content/vendor.bundle.addons.css")
@Styles.Render("~/Content/style.css")
@Styles.Render("~/Content/style1.css")
@Styles.Render("~/Content/favicon.ico")


<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div style="background-image:url(../../EIKONES/register.jpg)" class="content-wrapper d-flex align-items-center auth register-bg-1 theme-one">
            <div class="row w-100">
                <div class="col-lg-4 mx-auto">
                    <h2 class="text-center mb-4">Register</h2>
                    <div class="auto-form-wrapper">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <form action="#">
                                <div class="form-group">
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" ,placeholder = "Email"})
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" , placeholder = "Username"})
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" , placeholder = "Password"})
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" , placeholder = "Confirm Password"})
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group d-flex justify-content-center">
                                    <div class="form-check form-check-flat mt-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input" checked> I agree to the terms
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary submit-btn btn-block">Register</button>
                                </div>
                                <div class="text-block text-center my-3">
                                    <span class="text-small font-weight-semibold">Already have and account ?</span>
                                    <a href="login.html" class="text-black text-small">Login</a>
                                </div>
                            </form>
                        }
                        </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/vendor.bundle.base.js")
    @Scripts.Render("~/Scripts/vendor.bundle.addons.js")
    @Scripts.Render("~/Scripts/off-canvas.js")
    @Scripts.Render("~/Scripts/misc.js")
    @Scripts.Render("~/Scripts/jquery.cookie.js")
}

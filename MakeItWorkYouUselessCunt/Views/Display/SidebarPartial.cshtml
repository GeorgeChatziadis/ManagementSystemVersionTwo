@if (ViewBag.Admin)
{
    <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <ul class="nav">
            <li class="nav-item nav-profile">
                <a href="#" class="nav-link">
                    <div class="profile-image">
                        <img class="img-xs rounded-circle" src="~/EIKONES/boss.png" alt="profile image">
                        <div class="dot-indicator bg-success"></div>
                    </div>
                    <div class="text-wrapper">
                        <p title="Username You've Logged In" class="designation">@Html.DisplayName(User.Identity.Name)</p>

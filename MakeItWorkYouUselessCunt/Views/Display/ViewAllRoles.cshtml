@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "ViewAllRoles"; 
}
<div class="row">
    <div class="col-12 grid-margin">
        <div style="margin: auto;" class="col-lg-6 grid-margin stretch-card">
            <div style="margin: auto; min-width:50%" class="card">
                <div class="card-body">
                    <h3 class="views-headings">Roles View</h3>
                    <p class="views-comments">Here you can view all the active roles in the company.</p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Count</th>
                                <th>Activity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(r => role.Name)</td>
                                    <td>@role.Users.Count</td>
                                    <td>
                                        @Html.ActionLink("View All", "ViewAllWorkers","Display",new { roleSpec=role.Id },new {@class= "badge badge-pill badge-info", style = "font-size: 12px;" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
           
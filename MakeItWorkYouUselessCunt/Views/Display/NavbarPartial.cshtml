@model ManagementSystemVersionTwo.Models.ApplicationUser

<nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
    <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
        <a class="navbar-brand brand-logo" href="@Url.Action("Dashboard", "Display" )">
            <img src="~/EIKONES/Xenocrates.png" alt="logo" />
        </a>
        <a class="navbar-brand brand-logo-mini" href="@Url.Action("Dashboard", "Display" )">
            <img src="~/EIKONES/Xenocrates2.png" alt="logo" />
        </a>
    </div>
    <div class="navbar-menu-wrapper d-flex align-items-center">
        <figure class="text-center">
            <figcaption class="blockquote-footer">
                <cite title="Source Title">Xenocrates</cite> , a Management System for Companies
            </figcaption>
        </figure>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown d-none d-xl-inline-block user-dropdown">
                <a class="nav-link dropdown-toggle" id="UserDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                    @if (!ViewBag.roleIdentity)
                    {
                        <img class="img-sm rounded-circle" src="~/ProfPics/@Model.Worker.Pic" alt="Profile image">
                    }
                    else
                    {
                        <img class="img-sm rounded-circle" src="~/EIKONES/admin.png" alt="Profile image">
                    }
                </a>
                <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
                    <div class="dropdown-header text-center">
                        @if (!ViewBag.roleIdentity)
                        {
                            <img class="img-md rounded-circle" src="~/ProfPics/@Model.Worker.Pic" alt="Profile image">
                            <p class="mb-1 mt-3 font-weight-semibold">@Model.Worker.FullName</p>
                            <p class="font-weight-light text-muted mb-0">@Model.Email</p>
                        }
                        else
                        {
                            <img class="img-md rounded-circle" src="~/EIKONES/admin.png" alt="Profile image">
                            <p class="mb-1 mt-3 font-weight-semibold">@Model.UserName</p>
                            <p class="font-weight-light mb-0">@Model.Email</p>
                        }
                    </div>
                    <a class="dropdown-item" href="@Url.Action("Contact","Home")">Contact IT<i class="dropdown-item-icon ti-help-alt"></i></a>
                    @Html.Partial("_LoginPartial")
                </div>
            </li>
        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
        </button>
    </div>
</nav>